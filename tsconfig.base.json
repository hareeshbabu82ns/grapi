{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
