{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
